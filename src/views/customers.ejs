<%- include ('partials/_header')  %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (let i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].address %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <form action="/add" method="post">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name" class="form-control">
                    <input type="text" name="address" placeholder="Adress" class="form-control my-3">
                    <input type="text" name="phone" placeholder="Phone" class="form-control">
                    <button type="submit" class="btn btn-primary my-3">Save customer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/_footer')  %>